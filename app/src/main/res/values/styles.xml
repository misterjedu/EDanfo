<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground" textAlignment="center">
            @drawable/logo_filled_green_background
        </item>
    </style>


    <!--   BUTTONS **********************************->
    <!-    Primary Green Buttom-->
    <style name="PrimaryButton" parent="AppTheme">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <!--    Cancel Button-->
    <style name="CancelButton" parent="PrimaryButton">
        <item name="android:backgroundTint">@color/colorCancelButton</item>
    </style>


    <!--   TEXTS  **********************************->
    <!-    Thin Sub text-->
    <style name="NormalSubText" parent="AppTheme">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--   Bold Sub text -->
    <style name="BoldSubText" parent="NormalSubText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--    Black Normal Text-->
    <style name="BlackNormalText" parent="NormalSubText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--    Faint Normal Text-->
    <style name="FaintNormalText" parent="BlackNormalText">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!--    Title Text-->

    <style name="TitleNormalText" parent="BlackNormalText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleBoldText" parent="TitleNormalText">
        <item name="android:textStyle">bold</item>
    </style>


    <!--    Green Normal Text-->
    <style name="GreenNormalText" parent="BlackNormalText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--    Green sub Text-->
    <style name="GreenSubText" parent="GreenNormalText">
        <item name="android:textSize">14sp</item>
    </style>

    <!--    Bold Normal Text-->
    <style name="BoldNormalText" parent="BlackNormalText">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>


    <!-- INPUTS *******************************-->
    <style name="GreenEditText" parent="AppTheme">
        android:ems="10"
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/input_corner_radius</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="GreenTextInputLayout" parent="GreenEditText">
        <item name="android:padding">2dp</item>
    </style>


    <!--    SPECIALS ***************************************-->

    <!--    Account Profile Linear Layout-->

    <style name="SettingsOptionCard" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@drawable/curved_white_box</item>
        <item name="android:elevation">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsOptionIcon" parent="AppTheme">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">80dp</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="SettingsOptionText" parent="BlackNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--    ***********************************Custom App Bar Layout-->


    <!--    White Back Arrow-->
    <style name="WhiteBackArrow" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/backarrow_round_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <!--    Back Arrow Button-->
    <style name="GreenBackArrow" parent="WhiteBackArrow">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="CustomAppBar" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="CustomAppBarText" parent="BlackNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>


    <!--    *********************************** Driver Stats-->

    <style name="DriverStatCard" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/curved_white_box</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="DriverStatName" parent="BlackNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <!--.*********************************** Driver Profile -->

    <style name="DriverDashboardIcon" parent="AppTheme">
        <item name="android:background">@drawable/backarrow_round_background</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>