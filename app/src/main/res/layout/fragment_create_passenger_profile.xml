<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/fragment_create_passenger_profile_app_bar_ll"
        style="@style/CustomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_create_passenger_profile_back_arrow_iv"
            style="@style/GreenBackArrow" />

        <TextView
            android:id="@+id/fragment_create_passenger_profile_change_passenger_account_tv"
            style="@style/CustomAppBarText"
            android:text="@string/create_passenger_account" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_passenger_root_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/driver_account_profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/logo_filled_green_background"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--          FirstName Edit Text-->

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tap to upload Profile Image"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragment_passenger_first_name_til"
                app:layout_constraintStart_toStartOf="@+id/fragment_passenger_first_name_til"
                app:layout_constraintTop_toBottomOf="@+id/driver_account_profile_image" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_passenger_first_name_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/first_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_passenger_first_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--          LastName Edit Text-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_passenger_last_name_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/last_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="@+id/fragment_passenger_first_name_til"
                app:layout_constraintStart_toStartOf="@+id/fragment_passenger_first_name_til"
                app:layout_constraintTop_toBottomOf="@+id/fragment_passenger_first_name_til">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_passenger_last_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--         Email Edit Text-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_passenger_email_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/email_address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="@+id/fragment_passenger_last_name_til"
                app:layout_constraintStart_toStartOf="@+id/fragment_passenger_last_name_til"
                app:layout_constraintTop_toBottomOf="@+id/fragment_passenger_last_name_til">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_passenger_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--          Password Text-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_passenger_password_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="@+id/fragment_passenger_email_til"
                app:layout_constraintStart_toStartOf="@+id/fragment_passenger_email_til"
                app:layout_constraintTop_toBottomOf="@+id/fragment_passenger_email_til">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_passenger_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--          Password Text-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_passenger_repeat_password_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_password_again"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="@+id/fragment_passenger_password_til"
                app:layout_constraintStart_toStartOf="@+id/fragment_passenger_password_til"
                app:layout_constraintTop_toBottomOf="@+id/fragment_passenger_password_til">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_passenger_repeat_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />


            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/fragment_passenger_profile_btn"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="24dp"
                android:paddingBottom="16dp"
                android:text="@string/create_passenger_account"
                android:textAlignment="viewStart"
                app:icon="@drawable/ic_baseline_arrow_forward"
                app:iconGravity="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_passenger_repeat_password_til"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/fragment_passenger_repeat_password_til"
                app:layout_constraintTop_toBottomOf="@+id/fragment_passenger_repeat_password_til" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>