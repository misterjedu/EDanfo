<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout14"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context=".ui.main.driver.destination.AddNewTrip">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/fragment_add_trip_back_arrow_iv"
                style="@style/GreenBackArrow"
                />

            <TextView
                android:id="@+id/driver_statistics_my_stats_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Add Trip"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="From"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_add_new_trip_current_bustop_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragment_add_new_trip_current_bustop_et" />

            <EditText
                android:id="@+id/fragment_add_new_trip_current_bustop_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                style="@style/GreenEditText"
                android:hint="Current Bustop"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_add_new_trip_final_bustop_et"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/fragment_add_new_trip_final_bustop_et" />

            <EditText
                android:id="@+id/fragment_add_new_trip_final_bustop_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                style="@style/GreenEditText"
                android:background="@drawable/input_corner_radius"
                android:hint="Final Bustop"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/fragment_add_new_trip_current_bustop_et"
                app:layout_constraintStart_toStartOf="@+id/fragment_add_new_trip_current_bustop_et"
                app:layout_constraintTop_toBottomOf="@+id/fragment_add_new_trip_current_bustop_et" />


            <TextView
                android:id="@+id/add_trip_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_add_new_trip_price_et"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/fragment_add_new_trip_price_et" />

            <EditText
                android:id="@+id/fragment_add_new_trip_price_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                style="@style/GreenEditText"
                android:hint="Price"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/fragment_add_new_trip_final_bustop_et"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/fragment_add_new_trip_final_bustop_et"
                app:layout_constraintTop_toBottomOf="@+id/fragment_add_new_trip_final_bustop_et" />


            <Button
                android:id="@+id/fragment_add_new_sub_trip_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                style="@style/PrimaryButton"
                android:paddingBottom="16dp"
                android:text="Add SubTrip"
                app:layout_constraintBottom_toTopOf="@+id/fragment_add_new_trip_from_history_tv"
                app:layout_constraintEnd_toEndOf="@+id/fragment_add_new_trip_final_bustop_et"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/fragment_add_new_trip_price_et"
                app:layout_constraintTop_toBottomOf="@+id/fragment_add_new_trip_price_et"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/fragment_add_new_trip_from_history_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Or Add Trip from History"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_add_new_sub_trip_button" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
