<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.createprofile.CreateProfileLanding">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/edanfo_face_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/colorPrimary"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="We are pleased to have you here!"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            style="@style/BoldNormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="You can Register as a Driver"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView19"
            style="@style/BoldNormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="or as a Passenger"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fragment_create_profile_landing_register_as_driver_btn"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Register as a Driver"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_baseline_directions_bike_24" />

        <Button
            android:id="@+id/fragment_create_profile_landing__register_as_passenger_btn"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorLightBackground"
            android:fontFamily="@font/poppins_bold"
            android:text="Register as a Passenger"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_baseline_airline_seat_recline_normal_24"
            app:iconTint="@color/colorPrimary" />

    </LinearLayout>
</FrameLayout>